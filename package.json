{
  "name": "plasma",
  "version": "1.0.0",
  "description": "Enter project description",
  "scripts": {
    "compile": "node compile.js",
    "pretest": "./clone-kami.sh",
    "test": "node compile.js && mocha -t 30000 -r ts-node/register test/index.ts",
    "test:debug": "DEBUG=true npm run test",
    "deploy": "node deploy.js",
    "style-check": "prettier --check test/ contracts/",
    "typechain:ETH": "typechain --target ../TypeChain/packages/target-ethers-v5/ --outDir test/interfaces/ETH 'build/ETH/*.json'",
    "typechain:ESN": "typechain --target ../TypeChain/packages/target-ethers-v5/ --outDir test/interfaces/ESN 'build/ESN/*.json'",
    "typechain": "npm run typechain:ETH && npm run typechain:ESN && prettier --write ./test/interfaces"
  },
  "dependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.5",
    "eth-proof": "^2.1.4",
    "ethers": "^5.0.0-beta.191",
    "fs-extra": "8.1.0",
    "ganache-core": "^2.10.2",
    "mocha": "6.1.4",
    "solc": "^0.6.10",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3"
  },
  "devDependencies": {
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-alpha.53",
    "typechain": "^2.0.0"
  }
}
